<%- include('partials/header.ejs') %>
   <div class="container">
      <% if(message!=""){%>
      <p class="text-center h1 text-danger "><%=message%></p>
      <% } %>
      <form style="margin-top: 50px; margin-bottom: 100px;" 
      action="" method="POST" enctype="multipart/form-data">
         <div class="form-row">
            <div class="form-group col-md-6">
               <select id="category" name="category" class="form-control" required>
                  <option selected disabled>Choose Category</option>
                  <option>Iphone</option>
                  <option>Huawei</option>
                  <option>Samsung</option>
                  <option>Oppo</option>
                  <option>Sony</option>
                  <option>Others</option>
               </select>
            </div>
         </div>
         <div class="form-row">
            <div class="form-group col-md-6">
               <input id="title" type="text" name="title" class="form-control" 
               required placeholder="title"></input>
            </div>
         </div>
         <div class="form-row">
            <div class="form-group col-md-6">
               <textarea cols="10" rows="3" id="description" name="description" 
               class="form-control" required placeholder="description"></textarea>
            </div>
         </div>
         <div class="form-row">
            <div class="form-group col-md-6">
               <input id="quantity" type="number" name="quantity" class="form-control" 
               required placeholder="Quantity"></input>
            </div>
         </div>
         <div class="form-row">
            <div class="form-group col-md-6">
               <input id="price" type="number" name="price" class="form-control" 
               required placeholder="price"></input>
            </div>
         </div>
         <div class="form-row">
            <div class="form-group col-md-6">
               <label for="image">Product Image:</label>
               <input id="image" type="file" name="image" class="form-control" 
               required placeholder="image"></input>
            </div>
         </div>
         <div class="text-center">
            <button type="submit" class="btn btn-outline-primary">
               &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; 
               &nbsp; &nbsp;Save A Product &nbsp; &nbsp; &nbsp; &nbsp;
               &nbsp; &nbsp;&nbsp; &nbsp; &nbsp; &nbsp;
            </button>
         </div>
      </form> 
   </div> 